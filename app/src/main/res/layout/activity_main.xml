<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eggshell"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/khaki_dark" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/citiesFragmentContainer"
        android:name="com.example.tourguide.CitiesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/khaki_dark" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/guideFragmentContainer"
        android:name="com.example.tourguide.GuideFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>